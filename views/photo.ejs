<%- include('partials/_header') %>

<body class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
    <%- include('partials/_menu') %>
    <!-- end header section -->
  </div>

  <!-- portfolio section -->

  <section class="portfolio_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2><%= photo.name %></h2>
      </div>
      <div class="portfolio_container">
        <img src="<%= photo.url %>" alt="" />
      </div>
      <div>
        <p><%= photo.description %></p>
      </div>
      <div>
        <a href="/users/<%= photo.user._id %>" class="read_btn">
          Photographer: <%= photo.user.username %>
        </a>

        <% if (isOwner) { %>

        <div style="display: flex; justify-content: space-between">
          <a
            style="min-width: 266px"
            class="read_btn"
            data-toggle="modal"
            data-target="#updateModal"
            href=""
          >
            Update
          </a>
          <a
            style="min-width: 266px"
            class="read_btn"
            href="/photos/<%= photo._id %>?_method=DELETE"
            onclick="return confirm('Do you want to delete the photo')"
            >Delete</a
          >
        </div>

        <% }%>
      </div>
    </div>
  </section>
  <!-- end portfolio section -->
  <!-- modal section -->
  <div
    id="updateModal"
    class="modal fade bd-example-modal-lg"
    tabindex="-1"
    role="dialog"
    aria-labelledby="myLargeModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div style="margin-top: 50px; margin-bottom: 50px" class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="text_align_center text_center">
                <h2
                  style="font-size: 30px; margin-bottom: 20px; color: #85310c"
                >
                  Update Photo
                </h2>
              </div>
            </div>
            <div class="col-md-10 offset-md-1">
              <form
                id="request"
                class="main_form"
                method="POST"
                action="/photos/<%= photo._id %>?_method=PUT"
                enctype="multipart/form-data"
              >
                <div class="row">
                  <div class="col-md-12">
                    <input
                      value="<%= photo.name %>"
                      class="form_control"
                      placeholder="Name"
                      type="text"
                      name="name"
                    />
                  </div>
                  <div class="col-md-12">
                    <textarea
                      name="description"
                      style="height: 150px"
                      class="form_control"
                      placeholder="Description"
                      rows="5"
                    >
<%= photo.description %></textarea
                    >
                  </div>

                  <div style="margin-bottom: 20px" class="col-md-12">
                    <input type="file" name="image" class="form-control-file" />
                  </div>

                  <div class="col-md-12">
                    <div class="group_form">
                      <button class="read_more">Upload File</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end modal section -->
  <!-- footer section -->
  <%- include('partials/_footer') %>
</body>
