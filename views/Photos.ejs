<%- include('partials/_header') %>

<body class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
    <%- include('partials/_menu') %>
    <!-- end header section -->
  </div>

  <!-- portfolio section -->

  <section class="portfolio_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>Photos</h2>
      </div>
      <div class="portfolio_container">
        <div class="row">
          <% for (photo of photos) { %>
          <div class="img-box" >
            <img src="<%= photo.url %>" alt="" style="height: 20rem; object-fit: cover;" />
            <div class="btn-box">
              <a href="/photos/<%= photo._id %>">
                <div>
                  <h3 style="padding-top: 10px"><%= photo.name %></h3>
                  <i
                    class="fa fa-external-link-square"
                    aria-hidden="true"
                    style="padding-top:3rem"
                  ></i>
                  <p style="padding-top: 10px">
                    <%= photo.description.substring(0, 15) + '...' %>
                  </p>
                </div>
              </a>
            </div>
          </div>
          <% } %>
        </div>
      </div>

    </div>
  </section>
  <!-- end portfolio section -->

  <!-- footer section -->
  <%- include('partials/_footer') %>
</body>
